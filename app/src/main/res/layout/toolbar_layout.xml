<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:titleTextColor="@color/colorBlack"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" android:background="@drawable/gradient_view">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/title"
                  tools:text="Look" android:textColor="@color/colorWhite" android:textStyle="bold"
                  android:textSize="18sp"
                  android:textAlignment="center" android:textAllCaps="true"/>

    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>