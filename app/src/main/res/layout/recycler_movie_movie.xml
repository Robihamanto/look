<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp" tools:srcCompat="@drawable/aladdin"
            android:id="@+id/homeMovieImageView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitCenter" android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/homeMovieTextView"
            app:layout_constraintTop_toTopOf="@+id/homeMovieImageView"
            app:layout_constraintStart_toEndOf="@+id/homeMovieImageView" android:layout_marginStart="8dp"
            tools:text="Aladdin" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@android:color/black" android:textStyle="bold"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/homeOverviewMovieTextView" app:layout_constraintStart_toStartOf="@+id/homeMovieTextView"
            tools:text="Overview" app:layout_constraintTop_toBottomOf="@+id/homeMovieTextView"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/homeAdultMovieTextView"
            tools:text="18+" android:textSize="10sp"
            app:layout_constraintStart_toEndOf="@+id/homeVoteMovieTextView"
            app:layout_constraintTop_toTopOf="@+id/homeVoteMovieTextView"
            app:layout_constraintBottom_toBottomOf="@+id/homeVoteMovieTextView" android:layout_marginStart="4dp"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            tools:text="8,1"
            android:background="@drawable/rounded_corner" android:textAlignment="center"
            android:textColor="@android:color/white" android:id="@+id/homeVoteMovieTextView"
            app:layout_constraintTop_toBottomOf="@+id/homeOverviewMovieTextView"
            app:layout_constraintStart_toStartOf="@+id/homeOverviewMovieTextView" android:layout_marginTop="4dp"
            tools:visibility="invisible"/>


</android.support.constraint.ConstraintLayout>